<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:textSize="@dimen/text_large"/>

    <TextView
        android:id="@+id/txt_super_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:text="@string/poketype_super_effective"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_super"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name"
        android:layout_toEndOf="@id/txt_super_label"/>

    <TextView
        android:id="@+id/txt_weak_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_super_label"
        android:text="@string/poketype_weakness"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_weak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_super_label"
        android:layout_toEndOf="@id/txt_super_label"/>

</RelativeLayout>